<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<DialogPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tg.library.gui.controller.ExportController"
            prefWidth="420.0">

    <content>
        <VBox alignment="CENTER" spacing="15.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>

            <children>
                <Label text="Export Data to JSON format"/>

                <HBox spacing="10.0" alignment="CENTER">
                    <children>
                        <TextField fx:id="pathDisplayField"
                                   editable="false"
                                   promptText="No file selected..."
                                   HBox.hgrow="ALWAYS"/>
                        <Button mnemonicParsing="false"
                                onAction="#onSelectFile"
                                text="Choose Path"/>
                    </children>
                </HBox>

                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <children>
                        <Button mnemonicParsing="false"
                                onAction="#onCancel"
                                text="Cancel"/>
                        <Button fx:id="confirmButton"
                                disable="true"
                                mnemonicParsing="false"
                                onAction="#onConfirmExport"
                                text="Export Now"
                                style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </content>
</DialogPane>
