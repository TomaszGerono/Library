<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tg.library.gui.controller.TopicsController"
            id="topicsRoot">

    <center>
        <SplitPane dividerPositions="0.35">

            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="Topics" styleClass="section-title"/>

                <ListView fx:id="topicsList" VBox.vgrow="ALWAYS"/>

                <HBox spacing="8">
                    <Button fx:id="addTopicBtn" text="âž• Add" onAction="#onAddTopic"/>
                    <Button fx:id="deleteBtn" text="ðŸ—‘ Remove" onAction="#onDeleteTopic"/>
                </HBox>
            </VBox>

            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="Books in a topic" styleClass="section-title"/>

                <TableView fx:id="booksTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="titleCol" text="Title" prefWidth="250"/>
                        <TableColumn fx:id="authorCol" text="Author(s)" prefWidth="200"/>
                        <TableColumn fx:id="statusCol" text="Status" prefWidth="120"/>
                    </columns>
                </TableView>

                <HBox spacing="8">
                    <Button fx:id="addBookBtn" text="âž• Add book" onAction="#onAddBookToTopic"/>
                    <Button fx:id="removeBookBtn" text="âž– Remove book" onAction="#onRemoveBookFromTopic"/>
                </HBox>
            </VBox>

        </SplitPane>
    </center>

</BorderPane>
