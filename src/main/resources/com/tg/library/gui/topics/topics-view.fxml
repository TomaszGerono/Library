<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tg.library.gui.controller.TopicsController">
    <center>
        <SplitPane dividerPositions="0.35">
            <VBox xmlns="http://javafx.com/javafx"
                  xmlns:fx="http://javafx.com/fxml">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="Topics" styleClass="section-title"/>
                <ListView fx:id="topicsList" prefHeight="400"/>
                <HBox spacing="8">
                    <Button text="Add" />
                    <Button text="Change name"  fx:id="renameBtn"/>
                    <Button text="Remove"  fx:id="deleteBtn"/>
                </HBox>
            </VBox>

            <VBox xmlns="http://javafx.com/javafx"
                  xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
<!--            <VBox spacing="8" padding="10">-->
                <Label text="Books in a topic" styleClass="section-title"/>
                <TableView fx:id="booksTable">
                    <columns>
                        <TableColumn fx:id="titleCol" text="Title" prefWidth="250"/>
                        <TableColumn fx:id="authorCol" text="Author(s)" prefWidth="200"/>
                        <TableColumn fx:id="statusCol" text="Status" prefWidth="120"/>
                    </columns>
                </TableView>
                <HBox spacing="8">
                    <Button text="Add book ..."  fx:id="addBookBtn"/>
                    <Button text="Remove book from topic"  fx:id="removeBookBtn"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
