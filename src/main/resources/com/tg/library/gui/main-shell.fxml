<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>

<?import javafx.scene.layout.Pane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tg.library.gui.controller.MainShellController">

    <top>
        <ToolBar>
            <Label text="My Library"/>
            <Pane/>
            <Label fx:id="userLabel"/>
            <Button text="Import" onAction="#onImport"/>
            <Button text="Export" onAction="#onExport"/>
<!--            <Button text="Log out" onAction="#onLogout" fx:id="logoutButton"/>-->
        </ToolBar>
    </top>

    <center>
        <TabPane>
            <tabs>
                <Tab text="Books" closable="false">
                    <content>
                        <fx:include source="/com/tg/library/gui/books/books-view.fxml"/>
                    </content>
                </Tab>
                <Tab text="Topics" closable="false">
                    <content>
                        <fx:include source="/com/tg/library/gui/shelves/shelves-view.fxml"/>
                    </content>
                </Tab>
                <Tab text="Categories" closable="false">
                    <content>
                        <fx:include source="/com/tg/library/gui/categories/categories-view.fxml"/>
                    </content>
                </Tab>
                <Tab text="Overview" closable="false">
                    <content>
                        <fx:include source="/com/tg/library/gui/overview/overview-view.fxml"/>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
