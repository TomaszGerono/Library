<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.tg.library.gui.controller.ImportController"
      alignment="CENTER"
      spacing="12.0"
      prefWidth="520.0">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <children>
        <Label text="Import data"
               style="-fx-font-weight: bold; -fx-font-size: 13px;"/>

        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <children>
                <Label text="Source:"/>
                <ChoiceBox fx:id="sourceChoiceBox" prefWidth="200.0"/>
            </children>
        </HBox>

        <!-- JSON IMPORT PANE -->
        <VBox fx:id="jsonPane" spacing="10.0" visible="true" managed="true">
            <HBox spacing="10.0" alignment="CENTER">
                <children>
                    <TextField fx:id="pathDisplayField"
                               editable="false"
                               promptText="No file selected..."
                               HBox.hgrow="ALWAYS"/>
                    <Button mnemonicParsing="false"
                            onAction="#onSelectFile"
                            text="Choose file"/>
                </children>
            </HBox>
        </VBox>

        <!-- GOOGLE BOOKS IMPORT PANE -->
        <VBox fx:id="googlePane" spacing="10.0" visible="false" managed="false">
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <children>
                    <Label text="Query:"/>
                    <TextField fx:id="googleQueryField"
                               promptText="isbn:9780134685991 or intitle:clean code+inauthor:martin"
                               HBox.hgrow="ALWAYS"/>
                </children>
            </HBox>

            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <children>
                    <Label text="Max results:"/>
                    <Spinner fx:id="maxResultsSpinner" prefWidth="110.0"/>
                    <CheckBox fx:id="onlyBooksCheckBox" text="printType=books" selected="true"/>
                </children>
            </HBox>
        </VBox>

        <!-- STATUS -->
        <Label fx:id="statusLabel"
               text=""
               wrapText="true"
               maxWidth="480.0"
               style="-fx-text-fill: #b00020;"/>

        <!-- ACTIONS -->
        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <children>
                <Button mnemonicParsing="false"
                        onAction="#onCancel"
                        text="Cancel"/>
                <Button fx:id="confirmButton"
                        disable="true"
                        mnemonicParsing="false"
                        onAction="#onConfirmImport"
                        text="Import Now"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
            </children>
        </HBox>
    </children>
</VBox>
