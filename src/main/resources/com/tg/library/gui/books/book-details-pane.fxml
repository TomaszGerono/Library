<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tg.library.gui.controller.BookDetailsController"
      minWidth="320" prefWidth="360">

    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <Label text="Details" styleClass="section-title"/>

    <GridPane hgap="10" vgap="8">
        <columnConstraints>
            <ColumnConstraints minWidth="110" hgrow="NEVER"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="titleValue" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Author(s):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="authorsValue" wrapText="true" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Year:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="yearValue" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Genre:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="genreValue" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="ISBN:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="isbnValue" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Monastery:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Label fx:id="monasteryValue" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Publisher:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <Label fx:id="publisherValue" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Series:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <Label fx:id="seriesValue" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Status:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusCombo" prefWidth="220" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    </GridPane>

    <Pane minHeight="12"/>
    <Separator/>
    <Pane minHeight="12"/>
    <Label text="Notes:"/>
    <TextArea fx:id="notesArea" prefRowCount="8" wrapText="true"/>
    <Pane minHeight="12"/>
    <HBox spacing="10">
        <Button fx:id="saveNotesBtn" text="Save" onAction="#onSaveNotes"/>
        <Label fx:id="saveInfoLabel"/>
        <Pane HBox.hgrow="ALWAYS"/>
    </HBox>

</VBox>
